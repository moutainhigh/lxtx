<div class="dir">
	<div class="dir_cont">
		<a href="{WEB_PATH}">首页</a>  &gt; <a href="{WEB_PATH}/goods_list/">全部商品</a>&gt; <span class="txt-red">{wc:$daohang_title}</span>
	</div>
</div>
<div class="index_body">
	<div class="m-list-mod-hd">
		<h6>排序：</h6>
		<ul class="m-list-sortList">    
			<li {wc:if $select=='20'}class="selected"{wc:if:end}>
				<a href="{WEB_PATH}/goods_list/{wc:$cate_band}/20">人气奖品</a>
			</li>
			<li {wc:if $select=='30'}class="selected"{wc:if:end}>
				<a href="{WEB_PATH}/goods_list/{wc:$cate_band}/30">剩余人次</a>
			</li>
			<li {wc:if $select=='40'}class="selected"{wc:if:end}>
				<a href="{WEB_PATH}/goods_list/{wc:$cate_band}/40">最新奖品</a>
			</li>
			<li {wc:if $select=='60'}class="selected"{wc:if:end}>
				<a href="{WEB_PATH}/goods_list/{wc:$cate_band}/60">总需人次 <i title='升序' class='ico ico-arrow-sort ico-arrow-sort-gray-up'></i></a>
			</li>
			<li {wc:if $select=='50'}class="selected"{wc:if:end}>
				<a href="{WEB_PATH}/goods_list/{wc:$cate_band}/50">总需人次 <i title='降序' class='ico ico-arrow-sort ico-arrow-sort-gray-down'></i></a>
			</li>
		</ul>
	</div>
	<div class="glist_cont">
		{wc:loop $shoplist $i $shop}
			{wc:php:start}
			$p_width=round($shop['canyurenshu']/$shop['zongrenshu']*100);
			{wc:php:end}
			<div class="index_qgjp_item">
			{wc:if $shop['yunjiage']=='10.00'}							
				<i class="ten_ioc"></i>
			{wc:if:end}
				<div class="index_qgjp_img"><a href="{WEB_PATH}/goods/{wc:$shop['id']}" title="{wc:$shop['title']}" target="_blank"><img alt="{wc:$shop['title']}" src="{G_UPLOAD_PATH}/{wc:$shop['thumb']}"/></a></div>
				<p class="index_qgjp_title"><a href="{WEB_PATH}/goods/{wc:$shop['id']}" title="{wc:$shop['title']}" target="_blank">(第{wc:$shop['qishu']}期) {wc:$shop['title']}</a></p>
				<p class="index_qgjp_price">总需：{wc:$shop['zongrenshu']}人次</p>
				<div class="progressBar">
					<p class="progressBar_wrap"><span class="progressBar_bar" style="width:{wc:$p_width}%;"></span></p>
					<ul class="progressBar_txt">
						<li class="progressBar_txt_l">
							<p><b>{wc:$shop['canyurenshu']}</b></p>
							<p>已参与人次</p>
						</li>
						<li class="progressBar_txt_r">
							<p><b>{wc:$shop['zongrenshu']-$shop['canyurenshu']}</b></p>
							<p>剩余人次</p>
						</li>
					</ul>
				</div>
				<div class="index_body_zrjp_Button">
					<a href="{WEB_PATH}/goods/{wc:$shop['id']}">立即抢购 ></a>
				</div>
			</div>
		{wc:loop:end}
		
            {wc:if $total>$num}
			<div class="pagesx">{wc:page:two}</div>
			{wc:if:end}
	</div>
</div>

